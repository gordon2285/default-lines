            <Button x:Name="Basketball_LrgAwFav_LowTot" Content="Large Away Fav / Low Total" Canvas.Left="69.862" Canvas.Top="99.316" Width="75"/>
            <Button x:Name="Basketball_LrgHmFav_LowTot" Content="Large Home Fav / Low Total" Canvas.Left="227.814" Canvas.Top="99.316" Width="75"/>
