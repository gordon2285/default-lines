<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Default_Lines_WPF"
        mc:Ignorable="d"
        Title="Default Lines" Height="650" Width="650">
    <Grid>
        <Canvas x:Name="Soccer_PanelWPF" Height="400" Margin="120.5,105,120.331,0" VerticalAlignment="Top" Width="400" HorizontalAlignment="Center" Visibility="Hidden">
            <Button x:Name="Soccer_StandardMatch" Content="Standard Match" Canvas.Left="128.114" Canvas.Top="55.159" Width="108.808"/>
            <Button x:Name="Soccer_LrgHmFav_StdTot" Content="Large Home Fav /&#xA; Standard Total" Canvas.Left="55.16" Canvas.Top="129.892" Width="117.704" Height="51.989" HorizontalAlignment="Center"/>
            <Button x:Name="Soccer_LegAwFav_StdTot" Content="Large Away Fav /&#xA; Standard Total" Canvas.Left="236.922" Canvas.Top="129.892" Width="94.573" Height="51.989" HorizontalAlignment="Center" VerticalAlignment="Center"/>
