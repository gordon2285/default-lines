            <Button x:Name="Soccer_LrgAwFav_LrgTot" Content="Large Away Fav /&#xA; Large Total" Canvas.Left="236.922" Canvas.Top="227.757" Width="94.573" Height="50.209" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Canvas>
        <ComboBox HorizontalAlignment="Left" Margin="292.727,60.188,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="American Football" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Ausse Rules" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Basketball" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Soccer" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Tennis" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="167.727,60.188,0,0" TextWrapping="Wrap" Text="Select a sport:" VerticalAlignment="Top" Width="120" TextAlignment="Right"/>
